<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundPrimaryColor"
    android:visibility="visible"
    tools:context=".DeviceSettings">


    <ScrollView
        android:id="@+id/scrollview2"
        android:layout_width="226dp"
        android:layout_height="47dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="@+id/txt_help_gest2"
        app:layout_constraintTop_toTopOf="@+id/txt_help_gest2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/help_title_gest"
        android:layout_width="274dp"
        android:layout_height="40dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="104dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="toggle_contents1"
        android:text="Cloudy"
        android:textSize="20sp"
        android:typeface="sans"
        android:visibility="visible"
        app:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txt_help_gest"
        android:layout_width="274dp"
        android:layout_height="100dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="144dp"
        android:background="@color/white"
        android:text="Attributes"
        app:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/help_title_gest2"
        android:layout_width="274dp"
        android:layout_height="51dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="248dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="toggle_contents2"
        android:text="Sunny"
        android:textSize="20sp"
        android:typeface="sans"
        android:visibility="visible"
        app:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_help_gest2"
        android:layout_width="275dp"
        android:layout_height="114dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="296dp"
        android:background="@color/white"
        android:text="Attributes"
        app:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/backMainPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/roundbutton_primary"
        android:padding="10dp"
        android:text="Back to Main Page"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/background_light"
        android:textColorLink="@color/accentColor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.961" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="50dp"
        android:layout_height="34dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:background="@color/backgroundPrimaryColor"
        android:clickable="true"
        android:onClick="toggle_contents1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="34dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:background="@color/backgroundPrimaryColor"
        android:clickable="true"
        android:onClick="toggle_contents2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="69dp"
        android:layout_height="25dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="4dp"
        android:background="@color/accentColor"
        app:layout_constraintStart_toStartOf="@+id/help_title_gest"
        app:layout_constraintTop_toTopOf="@+id/help_title_gest" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="71dp"
        android:layout_height="26dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="8dp"
        android:background="@color/powerOffColor"
        app:layout_constraintStart_toStartOf="@+id/help_title_gest2"
        app:layout_constraintTop_toTopOf="@+id/help_title_gest2" />

    <Button
        android:id="@+id/button1"
        android:layout_width="79dp"
        android:layout_height="38dp"
        android:layout_marginTop="64dp"
        android:text="Edit Attribute"
        android:textSize="5sp"
        app:layout_constraintStart_toStartOf="@+id/txt_help_gest"
        app:layout_constraintTop_toTopOf="@+id/txt_help_gest" />

    <Button
        android:id="@+id/button2"
        android:layout_width="79dp"
        android:layout_height="38dp"
        android:layout_marginTop="80dp"
        android:text="Edit Attribute"
        android:textSize="5sp"
        app:layout_constraintStart_toStartOf="@+id/txt_help_gest2"
        app:layout_constraintTop_toTopOf="@+id/txt_help_gest2" />

    <ScrollView
        android:id="@+id/scrollview1"
        android:layout_width="226dp"
        android:layout_height="44dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="@+id/txt_help_gest"
        app:layout_constraintTop_toTopOf="@+id/help_title_gest">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brightness (-100 - 100)" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temperature (1700 - 4000k)" />

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>